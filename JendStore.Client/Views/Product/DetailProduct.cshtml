@model ProductDto

<div class='container-fluid'>
    <div class="card mx-auto col-md-3 col-10 mt-5">
        <img class='mx-auto img-thumbnail'
             src="https://i.imgur.com/pjITBzX.jpg"
             width="auto" height="auto" />
        <div class="card-body text-center mx-auto">
            <div class='cvp'>
                <h5 class="card-title font-weight-bold">@Model.Name</h5>
                <p class="card-text">@string.Format("{0:c}", Model.Price)</p>
                <a href="#" class="btn details px-auto">view details</a><br />
                <a href="#" class="btn cart px-auto">ADD TO CART</a>
            </div>
        </div>
    </div>

</div>