@model IEnumerable<CouponDTO>


<table class="table caption-top mt-5  text-center mt-4">
    <caption><b>List of Coupons</b></caption>
    <thead>
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Discount</th>
            <th scope="col">MinAmount</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>@item.Code</td>
            <td>@((item.Discount).ToString("c"))</td>
            <td>@((item.MinAmount).ToString("c"))</td>
            <td>
                 <a asp-action="DeleteCoupon" asp-route-couponId="@item.CouponId" class="btn btn-danger" data-toggle="tooltip"><i class="bi bi-trash">&#xE872;</i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
<div class="col-6 text-end mt-4">
    <a asp-action="CreateCoupon" class="btn btn-outline-primary"><i class="fa fa-plus-square m-2"></i>New Coupon</a>
</div>